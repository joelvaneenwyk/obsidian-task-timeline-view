{
    "compilerOptions": {
        "module": "amd",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "./build/view.js",
        "sourceMap": true,
        "jsx": "react-jsx",
        "strictNullChecks": true,
        "downlevelIteration": true,
        "moduleResolution":"node",
        "allowJs": true,
        "rootDir": "../../",
        "outDir": "build/",
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7",
            "ES2021"
        ]
    },
    "include": [
        "src/**/*", "../../dataview-util/*", "../../utils/*",
    ],
    "exclude": [
        "node_modules",
        "Taskido/**",
        "**/*.spec.ts"
    ]
}
